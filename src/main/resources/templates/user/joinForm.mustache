<form action="/join" method="post">
    <div>
        <h3>회원가입</h3>
    </div>
    <div class="form-group">
        <label>username:</label>
        <input type="text" class="form-control" placeholder="username" id="username" maxlength="20" required />
    </div>
    <div class="form-group">
        <label>Password:</label>
        <input type="password" class="form-control" placeholder="password" id="pwd" maxlength="100" required />
    </div>
    <div class="form-group">

        <div class="d-flex justify-content-between">
            <label>Address:</label>
            <button type="button" class="btn btn-outline-primary" onclick="goPopup();">주소검색</button>

        </div>
        <input type="text" class="form-control" placeholder="address" id="address" readonly />
    </div>
    <button type="submit" class="btn btn-primary">회원가입</button>
</form>

